<div class="row">
  <div class="col-sm-12">
    <div class="card" style="border-color: #FFF">
      <div class="card-block">
        <h3 class"card-title">Update <%= @store.name %> Store #<%= @store.id %></h3>
        <form action="/stores/<%= @store.id %>/update" method="post">
          <input type="hidden" name="_method" value="patch">
          <div class="form-group">
            <label for="name"></label>
            <input type="text" name="name" class="form-control" autofocus required>
          </div>
          <button type="submit" class="btn btn-info" data-toggle="button">Update</button>
        </form><br>
        <form action="/stores/<%= @store.id %>/delete" method="post">
          <input type="hidden" name="_method" value="delete">
          <button type="submit" class="btn btn-info" data-toggle="button">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="card" style="border-color: #FFF">
      <div class="card-block">
        <h3 class"card-title">Add to brand inventory:</h3>
        <form action="/stores/<%= @store.id %>" method="post">
          <div class="form-group">
            <label for="brand"></label>
            <input type="text" name="brand" class="form-control" autofocus required>
          </div>
          <div class="form-group">
            <label for="price"></label>
            <input type="text" name="price" class="form-control" autofocus required>
          </div>
          <button type="submit" class="btn btn-info" data-toggle="button">Add</button>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="card" style="border-color: #FFF">
      <div class="card-block">
        <% if @store.shoes.any?() %>
        <h3 class="card-title">Available stock:</h3><br>
        <ul>
          <div class="card-group">
            <div class="card" style="border-color: #FFF">
              <div class="card-body">
                <h4 class="card-text">Name</a></h4>
              </div>
            </div>
            <div class="card" style="border-color: #FFF">
              <div class="card-body">
                <h4 class="card-text">Price</h4>
              </div>
            </div>
            <div class="card" style="border-color: #FFF">
              <div class="card-body">
                <h4 class="card-text">Created</h4>
              </div>
            </div>
            <div class="card" style="border-color: #FFF">
              <div class="card-body">
                <h4 class="card-text">Updated</h4>
              </div>
            </div>
          </div>
        </ul>
        <ul style="list-style: none;">
          <% @store.shoes.each do |name| %>
            <li>
              <div class="card-group">
                <div class="card" style="border-color: #FFF">
                  <div class="card-body">
                    <p class="card-text"><a href="/brand/<%= name.id %>"><%= name.brand %></a></p>
                  </div>
                </div>
                <div class="card" style="border-color: #FFF">
                  <div class="card-body">
                    <p class="card-text"><a>$<%= '%.02f' % name.price %></a></p>
                  </div>
                </div>
                <div class="card" style="border-color: #FFF">
                  <div class="card-body">
                    <p class="card-text"><%= name.created_at%></p>
                  </div>
                </div>
                <div class="card" style="border-color: #FFF">
                  <div class="card-body">
                    <p class="card-text"><%= name.updated_at%></p>
                  </div>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <h4 class="card-title">No stock available!</h4>
        <p>Enter the first item.</p>
      <% end %>
      </div>
    </div>
  </div>
</div>
